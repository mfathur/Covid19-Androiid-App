<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_item_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/lato_bold"
            android:maxLines="1"
            android:text="Indonesia"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_item_country"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/positive"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_item_country"
            android:layout_marginHorizontal="50dp"
            android:layout_toEndOf="@id/txt_positive"
            android:fontFamily="@font/lato_regular"
            android:text="@string/recovered"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_item_country"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@id/txt_recovered"
            android:fontFamily="@font/lato_regular"
            android:text="@string/death"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/num_item_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_positive"
            android:layout_marginStart="35dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/_0"
            android:textAlignment="center"
            android:textColor="@color/colorOrange"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/num_item_recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_recovered"
            android:layout_marginStart="130dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/num_item_positive"
            android:fontFamily="@font/lato_bold"
            android:text="@string/_0"
            android:textAlignment="center"
            android:textColor="@color/colorGreen"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/num_item_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_death"
            android:layout_marginStart="124dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/num_item_recovered"
            android:fontFamily="@font/lato_bold"
            android:text="@string/_0"
            android:textAlignment="center"
            android:textColor="@color/colorRed"
            android:textSize="14sp" />




    </RelativeLayout>

</androidx.cardview.widget.CardView>